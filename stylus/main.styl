// variables
blue = #007DC1
blk = #303030
gry = #707176
wht = white
grn = #4EF67A
light-blue = #00A3FF

h1
  font-size 54px
  line-height 60px
  color grn
  font-weight 900
  margin-bottom 30px

p
  color #8d8d91
  font-size: 22px
  line-height 30px
  font-weight 300

a.link
  color grn
  font-size: 22px
  line-height: 30px
  font-weight: 100
  border 1px solid grn
  padding 10px 20px
  display: inline-block
  &:hover
    background grn
    color blk
    font-weight: 300


