.btn
  font-size 20px
  color blue
  padding 18px 48px
  display inline-block
  position relative
  border 1px solid blue
  border-radius 4px
  &.default
    background wht




.blurb-hero
  margin: 300px 100px 100px 0
  max-width: 400px

aside
  max-width: 400px

.blurb-post
  margin 300px 0 0 0


.project-links
  margin 0 30px
  li
    list-style-type: decimal-leading-zero
    list-style-position outside
    border-bottom 1px solid rgba(grn,0.1)
    transition all 300ms cubic-bezier(0.165, 0.840, 0.440, 1.000) 0.1s
    color gry
    &:hover
      color grn
      .panel p
        color gry + 50
      p
        color gry
      a.title
        color gry
        letter-spacing 2px
        padding-left: 10px

  a.title
    padding: 20px 0
    color grn
    display block
    font-size 18px
    line-height 25px
    font-weight 100
    letter-spacing 1.5px
    transition all 300ms cubic-bezier(0.165, 0.840, 0.440, 1.000) 0.1s

.panel
  opacity 0
  display none
  max-height 0
  position relative
  transition all 300ms cubic-bezier(0.165, 0.840, 0.440, 1.000) 0.1s
  p
    margin-bottom: 20px
  a
    margin-bottom: 50px

.panel.show
  opacity 1
  display block
  max-height inherit




